<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>Archetype Created Web Application</display-name>
    <!--  servlet mappings  -->
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListeEtudiant</servlet-name>
        <url-pattern>/listeEtudiant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Index_msg</servlet-name>
        <url-pattern>/index_msg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlConfirmation</servlet-name>
        <url-pattern>/ctrlConfirmation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FicheAppel</servlet-name>
        <url-pattern>/ficheAppel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FicheAppelController</servlet-name>
        <url-pattern>/ficheAppelController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlLogin</servlet-name>
        <url-pattern>/ctrlLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>


    <!--  servlets jsp  -->
    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/jsp/Home.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/jsp/Index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ListeEtudiant</servlet-name>
        <jsp-file>/jsp/ListeEtudiant.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Index_msg</servlet-name>
        <jsp-file>/jsp/Index_msg.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>FicheAppel</servlet-name>
        <jsp-file>/jsp/FicheAppel.jsp</jsp-file>
    </servlet>


    <!--  servlets java  -->
    <servlet>
        <servlet-name>CtrlConfirmation</servlet-name>
        <servlet-class>ctrl.CtrlLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlLogin</servlet-name>
        <servlet-class>ctrl.MemberController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FicheAppelController</servlet-name>
        <servlet-class>ctrl.FicheAppelController</servlet-class>
    </servlet>

    <!-- default page -->
    <welcome-file-list>
        <welcome-file>ficheAppelController</welcome-file>
    </welcome-file-list>
</web-app>
